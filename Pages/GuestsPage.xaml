<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="App1.Pages.GuestsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:App1.Models"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="База гостей"
                   Style="{StaticResource TitleTextBlockStyle}"
                   Margin="0,0,0,10"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="10" Margin="0,0,0,10">
            <TextBox x:Name="GuestSearchBox" Width="200" PlaceholderText="Поиск..."/>
            <Button x:Name="FindGuestButton" Content="Найти" Click="FindGuest_Click"/>
        </StackPanel>

        <ListView Grid.Row="2"
                  x:Name="GuestsListView"
                  ItemsSource="{x:Bind Guests, Mode=OneWay}"
                  SelectionMode="Single"
                  Margin="0,0,0,10">
            <ListView.HeaderTemplate>
                <DataTemplate>
                    <Grid Padding="10" Background="{ThemeResource SystemListLowColor}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="150"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="ФИО" Style="{StaticResource CaptionTextBlockStyle}"/>
                        <TextBlock Grid.Column="1" Text="Телефон" Style="{StaticResource CaptionTextBlockStyle}"/>
                        <TextBlock Grid.Column="2" Text="Email" Style="{StaticResource CaptionTextBlockStyle}"/>
                    </Grid>
                </DataTemplate>
            </ListView.HeaderTemplate>
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:Guest">
                    <Grid Padding="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="150"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0">
                            <Run Text="{x:Bind FirstName, Mode=OneWay}"/>
                            <Run Text=" "/>
                            <Run Text="{x:Bind LastName, Mode=OneWay}"/>
                        </TextBlock>
                        <TextBlock Grid.Column="1" Text="{x:Bind PhoneNumber, Mode=OneWay}"/>
                        <TextBlock Grid.Column="2" Text="{x:Bind Email, Mode=OneWay}"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <StackPanel Grid.Row="3" Orientation="Horizontal" Spacing="10">
            <Button x:Name="AddGuestButton" Content="Добавить" Click="AddGuest_Click"/>
            <Button x:Name="EditGuestButton" Content="Редактировать" Click="EditGuest_Click"/>
            <Button x:Name="DeleteGuestButton" Content="Удалить" Click="DeleteGuest_Click"/>
        </StackPanel>
    </Grid>
</Page>