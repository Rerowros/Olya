<ContentDialog
    x:Class="App1.Dialogs.ManageCategoriesDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:App1.Models"
    xmlns:converters="using:App1.Converters"
    mc:Ignorable="d"
    Title="Управление категориями номеров"
    PrimaryButtonText="Закрыть"
    DefaultButton="Primary">

    <ContentDialog.Resources>
        <converters:DecimalToCurrencyConverter x:Key="DecimalToCurrencyConverter"/>
    </ContentDialog.Resources>

    <Grid MinWidth="500" MinHeight="300">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ListView Grid.Row="0"
                  x:Name="CategoriesListView"
                  ItemsSource="{x:Bind Categories}"
                  SelectionMode="Single"
                  Margin="0,0,0,10">
            <ListView.HeaderTemplate>
                <DataTemplate>
                    <Grid Padding="10" Background="{ThemeResource SystemListLowColor}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="150"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Название" Style="{ThemeResource BaseTextBlockStyle}" FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="1" Text="Вместимость" Style="{ThemeResource BaseTextBlockStyle}" FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="2" Text="Базовая цена" Style="{ThemeResource BaseTextBlockStyle}" FontWeight="SemiBold"/>
                    </Grid>
                </DataTemplate>
            </ListView.HeaderTemplate>
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:RoomCategory">
                    <Grid Padding="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="150"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{x:Bind Name}"/>
                        <TextBlock Grid.Column="1" Text="{x:Bind Capacity}"/>
                        <TextBlock Grid.Column="2" Text="{x:Bind BasePricePerNight, Converter={StaticResource DecimalToCurrencyConverter}, Mode=OneWay}"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="10" HorizontalAlignment="Right">
            <Button Content="Добавить" Click="AddCategory_Click"/>
            <Button Content="Редактировать" Click="EditCategory_Click"/>
            <Button Content="Удалить" Click="DeleteCategory_Click"/>
        </StackPanel>

    </Grid>
</ContentDialog>